@{
    Layout = null;
}
<html lang="ja">
<head>
    <meta charset="utf-8">
    <title>jQuery Pagination</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/CSS/PaginationWithSearch.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/JS/Pagination.js"></script>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI';
        }
    </style>
</head>
<body class="ZeroMargin">
    <nav class="navbar navbar-inverse ZeroPadding SharpBorders">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand active" href="#">Pagination Using JQuery</a>
            </div>
            <ul class="nav navbar-nav">
            </ul>          
        </div>
    </nav>
    <div class="Container">
        <div class="row">
            <div class="form-group">
                <input type="text" class="form-control search" placeholder="Search" id="SearchBox">
            </div>
        </div>
        <div id="contents" class="container" style="height:420px">
            @for (int i = 1; i <= 10; i++)
            {
                string j = i + ".jpg";
                    <img src="~/Images/@j" class="Images col-lg-3 col-md-6 col-sm-12"  data-SearchTag="@i"/>
            }
        </div>
    </div>

    <script>
        $(document).ready(function () {
            UsPagination.PaginationWithSearch({
                ContentID: "contents",
                ItemVisiblePerPage: 8,
                ItemsInPaginationNav: 5,
                SearchBoxId: "SearchBox"
            });
        });
    </script>
</body>
</html>

